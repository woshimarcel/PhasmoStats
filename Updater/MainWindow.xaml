<Window x:Class="Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Updater"
        mc:Ignorable="d"
        Title="PhasmoStats Installer" Height="200" Width="350">
	<StackPanel Margin="20">
		<TextBlock x:Name="StatusText" Text="Do you want to install PhasmoStats?" Margin="0,0,0,20"/>
		<ProgressBar x:Name="Progress" Height="20" Margin="0,0,0,20"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button x:Name="InstallBtn" Content="Install" Width="80" Margin="0,0,10,0" Click="InstallBtn_Click"/>
			<Button x:Name="CancelBtn" Content="Cancel" Width="80" Click="CancelBtn_Click"/>
		</StackPanel>
	</StackPanel>
</Window>
